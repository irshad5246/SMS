@model SMS.Web.Areas.Dashboard.ViewModels.ClassListingModel


@if (Model != null && Model.Classes != null && Model.Classes.Count() > 0)
{
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>

                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var classes in Model.Classes)
                {
                    <tr>
                        <td>
                            @classes.ID
                        </td>
                        <td>
                            @classes.Name
                        </td>
                        <td>
                            @classes.Description
                        </td>

                        <td>
                            <button data-href="@Url.Action("Action", "Classes",new {ID=classes.ID })" data-toggle="modal" data-target="#accomodatioTypeForm" type="button" class="data-btn btn btn-outline-primary btn-sm"><i class="fas fa-edit mr-1"></i>Edit</button>
                            <button data-href="@Url.Action("Delete", "Classes",new {ID=classes.ID })" data-toggle="modal" data-target="#accomodatioTypeForm" type="button" class="data-btn btn btn-outline-danger btn-sm"><i class="fas fa-trash mr-1"></i>Delete</button>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
        </div>

        if (Model.Pager != null && Model.Pager.TotalPages > 1)
        {

        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-end">
                @if (Model.Pager.CurrentPage == 1)
                {
                    <li class="page-item disabled">
                        <a class="page-link" href="#">
                            <i class="fa fa-angle-double-left"></i>
                        </a>
                    </li>
                }
                else
                {
                    <li class="page-item ">
                        <a class="page-link" href="@Url.Action("Index", "Courses", new { pageNo = Model.Pager.CurrentPage - 1 ,searchTerm = Model.SearchTerm})"><i class="fa fa-angle-double-left"></i></a>
                    </li>
                }

                @for (int page = Model.Pager.StartPage; page < Model.Pager.EndPage + 1; page++)
                {
                    var active = page == Model.Pager.CurrentPage ? "active" : string.Empty;

                    <li class="page-item @active">
                        <a class="page-link" href="@Url.Action("Index", "Courses", new { pageNo = page , searchTerm = Model.SearchTerm })">
                            @page
                        </a>
                    </li>
                }

                @if (Model.Pager.CurrentPage == Model.Pager.EndPage)
                {
                    <li class="page-item disabled ">
                        <a class="page-link" href="#">
                            <i class="fa fa-angle-double-right"></i>
                        </a>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", "Courses", new { pageNo = Model.Pager.CurrentPage + 1 ,searchTerm = Model.SearchTerm})">
                            <i class="fa fa-angle-double-right"></i>
                        </a>
                    </li>
                }

            </ul>
        </nav>
        }

        }
        else
        {
        <div class="alert alert-info alert-dismissible" role="alert">
            Sorry!! There is no Records exits...
        </div>
        }

