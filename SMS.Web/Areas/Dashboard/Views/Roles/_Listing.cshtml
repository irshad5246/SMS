@model SMS.Web.Areas.Dashboard.ViewModels.RolesListingModel

@if (Model != null && Model.Roles != null && Model.Roles.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>

                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Users</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model.Roles)
            {
                <tr>
                    <td>
                        @role.Id
                    </td>
                    <td>
                        @role.Name
                    </td>
                    <td>
                        <a href="@Url.Action("Index", "Users",new { roleID=role.Id })">
                            @role.Users.Count
                        </a>

                    </td>

                    <td>
                        <button data-href="@Url.Action("Action", "Roles",new {ID=role.Id })" data-toggle="modal" data-target="#accomodatioTypeForm" type="button" class="data-btn btn btn-primary btn-sm"><i class="fas fa-edit mr-1"></i>Edit</button>
                        <button data-href="@Url.Action("Delete", "Roles",new {ID=role.Id })" data-toggle="modal" data-target="#accomodatioTypeForm" type="button" class="data-btn btn btn-danger btn-sm"><i class="fas fa-trash mr-1"></i>Delete</button>
                    </td>
                </tr>
            }

        </tbody>
    </table>

    if (Model.Pager != null && Model.Pager.TotalPages > 1)
    {

        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-end">
                @if (Model.Pager.CurrentPage == 1)
                {
                    <li class="page-item disabled">
                        <a class="page-link" href="#">
                            <i class="fa fa-angle-double-left"></i>
                        </a>
                    </li>
                }
                else
                {
                    <li class="page-item ">
                        <a class="page-link" href="@Url.Action("Index", "Roles", new { pageNo = Model.Pager.CurrentPage - 1 ,searchTerm = Model.SearchTerm})"><i class="fa fa-angle-double-left"></i></a>
                    </li>
                }

                @for (int page = Model.Pager.StartPage; page < Model.Pager.EndPage + 1; page++)
                {
                    var active = page == Model.Pager.CurrentPage ? "active" : string.Empty;

                    <li class="page-item @active">
                        <a class="page-link" href="@Url.Action("Index", "Roles", new { pageNo = page , searchTerm = Model.SearchTerm })">
                            @page
                        </a>
                    </li>
                }

                @if (Model.Pager.CurrentPage == Model.Pager.EndPage)
                {
                    <li class="page-item disabled ">
                        <a class="page-link" href="#">
                            <i class="fa fa-angle-double-right"></i>
                        </a>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", "Roles", new { pageNo = Model.Pager.CurrentPage + 1 ,searchTerm = Model.SearchTerm})">
                            <i class="fa fa-angle-double-right"></i>
                        </a>
                    </li>
                }

            </ul>
        </nav>
    }

}
else
{
    <div class="alert alert-warning" role="alert">
        Sorry!! There is no Records exits...
    </div>
}


